<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Harmoni - login</title>
    <link rel="shortcut icon" href="assets/images/favicon.png">
    <!-- fraimwork - css include-->
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.min.css">
    <!-- icon css include-->
    <link rel="stylesheet" type="text/css" href="assets/css/fontawesome-all.css">
    <link rel="stylesheet" type="text/css" href="assets/css/flaticon.css">
    <!-- custom css include-->
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
    <style>
      @media screen and (min-width:0px) and (max-width:980px) {
      #slide-section {
      margin-top: -5px !important;
      }
      }
      
      body {
      background-image: url("/assets/images/blog/big-ebent1.jpg");
      background-size: cover;
      position: relative;
      }
      
      body::after {
      content: "";
      position: absolute;
      z-index: -1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100vh;
      backdrop-filter: blur(15px);
      }
      
      #error {
      font-weight: 900;
      color: #fff;
      }
    </style>
  </head>
  <body>
    <!-- preloader - start-->
    <div id="preloader"></div>
    <!-- preloader - end-->
    <div class="reglog-modal-wrapper clearfix" id="login-modal" style="background-image: url(assets/images/login-modal-bg.jpg);">
      <div class="overlay-black clearfix">
        <!-- leftside-content - start-->
        <div class="leftside-content">
          <div class="site-logo-wrapper mb-80"><a class="logo" href="/"><img src="assets/images/2.site-logo.png" alt="logo_not_found"></a></div>
          <div class="register-login-link mb-80">
            <ul>
              <li class="active"><a href="/login">Login</a></li>
              <li><a href="/register">Register</a></li>
            </ul>
          </div>
          <div class="copyright-text d-none">
            <p class="m-0">Â©2019 <a class="yellow-color" href="/">Harmoni.com</a>all right reserved, made with<i class="fas fa-heart"></i>by
              jThemes Studio
            </p>
          </div>
        </div>
        <!-- leftside-content - end-->
        <!-- rightside-content - start-->
        <div class="rightside-content text-center">
          <div class="mb-30">
            <h2 class="form-title title-large white-color">Account<strong>Login</strong></h2><span class="form-subtitle white-color">Login to our website, or<strong>REGISTER</strong></span>
          </div>
          <!-- If you want to Put Login With Google-->
         
          <div class="or-text mb-30"><span>or sign in</span></div>
          <div class="login-form text-center mb-2">
            <form class="form form--login" action="https://127.0.0.1:3000/login" method="POST">
              <div class="form-item">
                <input id="email" type="email" placeholder="example@gmail.com" required>
              </div>
              <div class="form-item">
                <input id="password" type="password" placeholder="Password" required>
              </div>
              <button class="login-btn" type="submit">login now</button>
            </form>
          </div>
          <div class="bottom-text white-color">
            <p class="m-0">* All field mandatory.</p>
         
          </div>
        </div>
        <!-- rightside-content - end-->
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
      document.getElementById("preloader").style.display = "none";
      })
    </script>
    <script src="js/login.js"></script>
  </body>
</html>